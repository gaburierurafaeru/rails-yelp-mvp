<div class="container">
  <h1>Add Review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
   <%= f.label :rating %>
  <%= f.text_field :rating, class: 'form-control' %>
  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <%= f.submit 'Submit', class: 'btn btn-primary mt-3' %>
<% end %>
<p><%= link_to 'Back', new_restaurant_review_path(@restaurant), class: 'btn btn-light' %></p>
</div>
